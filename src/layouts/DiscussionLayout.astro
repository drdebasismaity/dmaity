---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Wesbsite of Dr. Debasis Maity, Urosurgeon in Kolkata" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="container">
      <slot />
    </div>
  </body>
</html>
<style is:global>
  @import '../../node_modules/bootstrap/dist/css/bootstrap.min.css';
  @import '../style/custom.css';

  img {
    display: block;
    max-width: 600px;
    margin: auto;
  }
</style>
