---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Wesbsite of Dr. Debasis Maity, Urosurgeon in Kolkata" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="container">
      <slot />
    </div>
  </body>
</html>
<style is:global>
  @import '../../node_modules/bootstrap/dist/css/bootstrap.min.css';
  @import '../style/custom.css';

  h1, h2, h3, h4, h5, h6{
    text-align:center;
  }

  .swiper-container {
    width: 100%;
    height: 400px;
    overflow: hidden;
  }

  .swiper-slide {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .swiper-slide img {
    max-width: 100%;
    max-height: 100%;
    object-fit: cover;
  }
</style>
